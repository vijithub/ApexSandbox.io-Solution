public Boolean companionPlants(String plant1, String plant2) {        
          Boolean isCompanion = false;

switch (plant1) {
    case 'onions':
        isCompanion = (plant2 == 'lettuce' || plant2 == 'carrots' || plant2 == 'tomatoes');
        break;
    case 'lettuce':
        isCompanion = (plant2 == 'cucumbers' || plant2 == 'onions');
        break;
    case 'cucumbers':
        isCompanion = (plant2 == 'lettuce');
        break;
    case 'carrots':
        isCompanion = (plant2 == 'onions');
        break;
    case 'tomatoes':
        isCompanion = (plant2 == 'onions');
        break;
}

return isCompanion;
    }    